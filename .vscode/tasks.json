{
	"version": "2.0.0",
	/* options can be in any legal place ... 
	   reading env:varname from it will be always blank*/
	"options": {
		"env": {
			"compiler" : "cl.exe",
			"clang" : "${config:dbj.clang_x64}"
		}
	},
	"tasks": [
		{
			"type": "shell",
			"label": "drive the driver",
			"command": ".vscode\\driver.cmd \"${config:dbj.clang_x64_nadalap}\" \"${config:dbj.clang_ignored_warnings}\" ${config:dbj.source_files_c} ${config:dbj.source_files_cpp}",
			"detail": "testing",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "test_task",
			"command": "echo config:cdbj.clang_x64 = [${config:dbj.clang_x64}] & echo env:clang = [${env:clang}]",
			"detail": "testing user defined variables from tasks.json",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "CLANG_RELEASE_NO_CPPX",
			"command": "${config:dbj.clang_x64}",
			"args": [
				"-Wall",
				"-Wno-sign-conversion",
				"-Wno-zero-as-null-pointer-constant",
				"-Wno-c++98-compat-pedantic",
				"-Wno-format-non-iso",
				"-Wno-unused-macros",
				"-Wno-reserved-id-macro",
				"-Wno-nonportable-system-include-path",
				"/GR-",
				"/D_HAS_EXCEPTIONS=0",
				"/MT",
				"/std:c++17",
				"/DNDEBUG",
				"/D_CRT_SECURE_NO_WARNINGS",
				"/DWINVER=0x0A00",
				"/D_WIN32_WINNT=0x0A00",
				"${config:dbj.source_files_c}",
				"${config:dbj.source_files_cpp}",
				"-o",
				"${workspaceFolder}\\bin\\dirent_clang_release_no_cppx.exe"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "CLANG TEST TARGET",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}