{
	"version": "2.0.0",
	/* options can be in any legal place ... 
	   reading env:varname from it will be always blank*/
	"options": {
		"env": {
			"compiler" : "cl.exe",
			"clang" : "${config:dbj.clang_x64}"
		}
	},
	"tasks": [
		{

			"type": "shell",
			"label": "drive the driver",
			"command": ".vscode\\driver.cmd \"${config:dbj.clang_x64}\" \"${config:dbj.clang_ignored_warnings}\" ${config:dbj.source_files_c} ${config:dbj.source_files_cpp}",
			"detail": "testing",
			"group": {
				/* this is ok to be added to every task, this also shows normal list of tasks
				   with no repetitions after CTRL+SHIFT+B
				*/
				"kind": "build",
				"isDefault": true
			}
		},
		{

			"type": "shell",
			"label": "test_task",
			/* second echo is blank result `[]` */
			"command": "echo config:cdbj.clang_x64 = [${config:dbj.clang_x64}] & echo env:clang = [${env:clang}]",
			"detail": "testing user defined variables from tasks.json",
			"group": {
				/* this is ok to be added to every task, this also shows normal list of tasks
				   with no repetitions after CTRL+SHIFT+B
				*/
				"kind": "build",
				"isDefault": true
			}
		},
		{
			/* does not have to be "cppbuild" type */
			"type": "shell",
			"label": "CLANG_RELEASE_NO_CPPX",
			/* 
			double quotes are not removed but that is ok
			for windows paths, thus this works with cmd.exe
			*/
			"command": "${config:dbj.clang_x64}",
			"args": [
				"-Wall",

				/* 
				this does not work because double quotes are not removed 
				from the value that must be in double quotes in settings.json
				
				"${config:dbj.clang_ignored_warnings}",
				*/

/*	this works */
				"-Wno-sign-conversion",
				"-Wno-zero-as-null-pointer-constant",
				"-Wno-c++98-compat-pedantic",
				"-Wno-format-non-iso",
				"-Wno-unused-macros",
				"-Wno-reserved-id-macro",
				"-Wno-nonportable-system-include-path",
 /* clang-cl takes args with '/' or '-' */			
				"/GR-",
				"/D_HAS_EXCEPTIONS=0",
                "/MT",	
				"/std:c++17",
				"/DNDEBUG",
				"/D_CRT_SECURE_NO_WARNINGS",
				"/DWINVER=0x0A00",
				"/D_WIN32_WINNT=0x0A00",
/* 
   double quotes are not removed bellow from values read but this works as that is 
   ok for windows cmd shell for paths with spaces inside
*/				
				"${config:dbj.source_files_c}",
				"${config:dbj.source_files_cpp}",
				"-o",
				"${workspaceFolder}\\bin\\dirent_clang_release_no_cppx.exe"
			],
		/* this seems completely redundant 
		   generated by VSCode
			"options": {
				"cwd": "D:\\PROD\\programs\\Microsoft Visual Studio\\2019\\Community\\VC\\Tools\\Llvm\\x64\\bin"
			},
		*/
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "CLANG TEST TARGET",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}